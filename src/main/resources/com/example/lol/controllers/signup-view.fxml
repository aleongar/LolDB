<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" styleClass="background" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lol.controllers.SignupController">
    <children>
        <HBox alignment="CENTER" maxHeight="600.0" maxWidth="800.0" minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="800.0" >
            <children>
                <VBox maxHeight="300.0" maxWidth="400.0" minHeight="300.0" minWidth="400.0" prefHeight="300.0" prefWidth="400.0" styleClass="login-form">
                    <children>
                        <HBox alignment="CENTER" maxHeight="75.0" maxWidth="400.0" minHeight="75.0" minWidth="400.0" prefHeight="75.0" prefWidth="400.0">
                            <children>
                                <Label styleClass="login-label" text="Usuario:">
                                    <HBox.margin>
                                        <Insets right="30.0" />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="userTextField" styleClass="login-fields" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" maxHeight="75.0" maxWidth="400.0" minHeight="75.0" minWidth="400.0" prefHeight="75.0" prefWidth="400.0">
                            <children>
                                <Label styleClass="login-label" text="Contraseña:">
                                    <HBox.margin>
                                        <Insets right="30.0" />
                                    </HBox.margin>
                                </Label>
                                <PasswordField fx:id="passTextField" styleClass="login-fields" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" maxHeight="75.0" maxWidth="400.0" minHeight="75.0" minWidth="400.0" prefHeight="75.0" prefWidth="400.0">
                            <children>
                                <Label styleClass="login-label" text="Repite Contraseña:">
                                    <HBox.margin>
                                        <Insets right="30.0" />
                                    </HBox.margin>
                                </Label>
                                <PasswordField fx:id="repeatTextField" styleClass="login-fields" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#clear" text="Limpiar">
                                    <HBox.margin>
                                        <Insets right="40.0" />
                                    </HBox.margin>
                                    <styleClass>
                                        <String fx:value="btn" />
                                        <String fx:value="btn-dark" />
                                    </styleClass>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#signUp" text="Crear Cuenta">
                                    <styleClass>
                                        <String fx:value="btn" />
                                        <String fx:value="btn-dark" />
                                    </styleClass>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
